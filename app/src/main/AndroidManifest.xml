<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.selfie.ibrahim.selfie_app">
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.wifi" android:required="true"/>
    <uses-feature android:name="android.hardware.camera" android:required="true"/>
    <uses-feature android:name="android.hardware.camera.autofocus" android:required="true"/>
    <uses-feature android:name="android.hardware.camera.front" android:required="true"/>
    <uses-feature android:name="android.hardware.camera.front.autofocus" android:required="true"/>

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:theme="@style/AppTheme.NoActionBar">

        <activity android:name="com.selfie.ibrahim.selfie_app.calibration.activities.MainActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Our settings activity -->
        <activity
            android:name="com.selfie.ibrahim.selfie_app.calibration.activities.SettingsActivity"
            android:screenOrientation="portrait"/>

        <!-- Our result activity -->
        <activity
            android:name="com.selfie.ibrahim.selfie_app.calibration.activities.ResultsActivity"
            android:screenOrientation="portrait"/>

    </application>


</manifest>